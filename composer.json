{
    "name": "filipefernandes007/jwt-auth",
    "description": "JWT auth with Slim Framework",
    "keywords": ["microframework", "rest", "router", "psr7"],
    "homepage": "https://github.com/filipefernandes007/jwt-auth",
    "license": "MIT",
    "authors": [
        {
            "name": "Filipe Fernandes",
            "email": "filipefernandes007@gmail.com",
            "homepage": "https://github.com/filipefernandes007"
        }
    ],
    "require": {
        "php": ">=7.1.0",
        "slim/slim": "^3.1",
        "slim/php-view": "^2.0",
        "monolog/monolog": "^1.17",
        "tuupola/slim-jwt-auth": "^3.1",
        "ext-json": "*",
        "ext-pdo": "*",
        "guzzlehttp/guzzle": "~6.0"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8 < 6.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/",
            "App\\": "src/App/"
        }
    },
    "config": {
        "process-timeout" : 0
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit"
    }

}
